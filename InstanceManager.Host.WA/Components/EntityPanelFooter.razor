@using Microsoft.FluentUI.AspNetCore.Components.Icons.Regular
@* Reusable footer component for entity create/edit panels *@
<FluentDialogFooter>
    <FluentButton Appearance="Appearance.Accent"
                  IconStart="@(IsEditMode ? new Size20.Save() : new Size20.Add())"
                  OnClick="HandleSaveClick"
                  Loading="IsSaving">
        @(IsEditMode ? SaveButtonText : CreateButtonText)
    </FluentButton>

    <FluentButton Appearance="Appearance.Neutral"
                  IconStart="@(IsEditMode ? new Size20.CheckmarkCircle() : new Size20.AddCircle())"
                  OnClick="HandleSaveAndCloseClick"
                  Loading="IsSaving">
        @(IsEditMode ? SaveAndCloseButtonText : CreateAndCloseButtonText)
    </FluentButton>

    <FluentButton Appearance="Appearance.Neutral"
                  IconStart="@(new Size20.Dismiss())"
                  OnClick="HandleCancelClick">
        @CancelButtonText
    </FluentButton>

    @if (ShouldShowDeleteButton)
    {
        <FluentSpacer />
        <FluentButton Appearance="Appearance.Accent"
                      BackgroundColor="var(--error)"
                      IconStart="@(new Size20.Delete())"
                      OnClick="HandleDeleteClick"
                      Disabled="IsSaving"
                      Loading="IsDeleting">
            @DeleteButtonText
        </FluentButton>
    }
</FluentDialogFooter>
